{
  "manifest_version": 3,
  "name": "Focus Timer",
  "version": "1.0",
  "permissions": [
    "storage",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "declarativeNetRequest",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-32.png",
      "128": "icons/icon-192.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-32.png",
    "128": "icons/icon-192.png"
  }
}
